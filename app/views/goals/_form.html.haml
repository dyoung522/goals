= simple_form_for @goal do |f|
  - if @goal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@goal.errors.count, 'error')} prohibited this goal from being saved:"
      %ul
        - @goal.errors.full_messages.each do |msg|
          %li= msg

  .fields
    = f.input :date_start
    = f.input :date_due
    = f.input :date_completed
    = f.input :topic

  .actions
    = f.submit 'Save'
